<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/pureAmber"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/commentUserAvatar"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/avatar_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/commentUserName"
            android:layout_toRightOf="@+id/commentUserAvatar"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/pureWhite"
            android:text="你是大傻蛋"
            android:textSize="19dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/commentUserContent"
            android:layout_toRightOf="@+id/commentUserAvatar"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="30dp"
            android:textColor="@color/pureLowerWhite"
            android:text="你是大傻蛋,大幅打折伐法发发法撒旦发顺丰"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/commentUserCommentTime"
            android:layout_toRightOf="@+id/commentUserAvatar"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/pureGray"
            android:text="2017/02/13"
            android:textSize="19dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</RelativeLayout>