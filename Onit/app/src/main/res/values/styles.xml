<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Design.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/pureAmber</item>
        <item name="colorPrimaryDark">@color/purePrimaryAmber</item>
        <item name="colorAccent">@color/pureOrange</item>
        <item name="android:textColorPrimary">@color/pureWhite</item>  
      <item name="android:textColorSecondary">@color/pureGray</item> 
        <item name="android:textColor">?android:attr/textColorSecondary</item> 
    </style>
    <style name="MyEditText" parent="Theme.AppCompat.Light">
         <item name="colorControlNormal">@color/pureGray</item>
         <item name="colorControlActivated">@color/pureWhite</item>
    </style>
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="actionMenuTextColor">@color/pureBlack</item> <!--  敲定颜色-->
        <item name="android:textSize">18sp</item> <!--  搞掂字体大小-->
    </style>
    <style name="ToolbarPopupTheme" parent="@style/ThemeOverlay.AppCompat">
        <item name="android:colorBackground">#212121</item>
    </style>
</resources>
